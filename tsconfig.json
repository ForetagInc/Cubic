{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@foretag/env/*": [
        "apps/*/src/environments/environment"
      ],
      "@foretag/apps/*": [
        "apps/*/src/index.ts"
      ],
      "@foretag/schemas": [
        "libs/schemas/src/index.ts"
      ],
      "@foretag/schemas/*": [
        "libs/schemas/src/lib/*"
      ],
      "@foretag/shared": [
        "libs/shared/src/index.ts"
      ],
      "@foretag/core": [
        "libs/core/src/index.ts"
      ],
      "@foretag/graphql": [
        "libs/graphql/src/index.ts"
      ],
      "@foretag/i18n": [
        "libs/i18n/src/index.ts"
      ],
      "@foretag/home": [
        "libs/home/src/index.ts"
      ],
      "@foretag/not-found": [
        "libs/not-found/src/index.ts"
      ],
      "@foretag/auth": [
        "libs/auth/src/index.ts"
      ],
      "@foretag/login": [
        "libs/login/src/index.ts"
      ],
      "@foretag/logout": [
        "libs/logout/src/index.ts"
      ],
      "@foretag/server": [
        "libs/server/src/index.ts"
      ],
      "@foretag/transfer-state": [
        "libs/transfer-state/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
